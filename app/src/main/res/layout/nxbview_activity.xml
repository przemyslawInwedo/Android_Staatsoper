<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tab_local_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
 <LinearLayout android:id="@+id/folderHeader"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:paddingTop="4dip"
	android:paddingBottom="3dip"
	android:paddingLeft="4dip"
	android:paddingRight="2dip" >
	  
	  <Button 
	  	android:id="@+id/nxb_back_button"
	  	android:text="@string/nxbview_activity_back_button_text"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content" />

	  <TextView
		android:id="@+id/nxb_Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:textSize="22dip"
		android:textStyle="bold"
		android:layout_margin="4dip"/>
  </LinearLayout>
	  
	<ListView android:id="@+id/nxb_listview"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"/>

  
</LinearLayout>
