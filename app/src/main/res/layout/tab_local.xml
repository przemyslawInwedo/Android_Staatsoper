<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tab_local_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
	 <LinearLayout
		android:id="@+id/folderHeader"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:padding="4dip"
		android:visibility="gone" >
	  
	  <Button 
	  	android:id="@+id/prevFolder"
	  	android:text="@string/tab_local_back_button_text"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
		  android:layout_margin="4dip"/>

	  <TextView
		android:id="@+id/folderTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:drawableLeft="@drawable/orange_folder_s"
		android:drawableStart="@drawable/orange_folder_s"
		android:drawablePadding="2dip"
		android:ellipsize="marquee"
		android:gravity="center"
		android:textSize="22dip"
		android:textStyle="bold" />
	</LinearLayout>
	  
	<ListView android:id="@android:id/list"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"/>
	<TextView android:id="@android:id/empty"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/no_files"/>

</LinearLayout>
