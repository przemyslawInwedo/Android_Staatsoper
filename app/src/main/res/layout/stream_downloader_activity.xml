<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dip">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/url"
			android:textStyle="bold"
			android:layout_margin="4dip"/>

		<TextView
			android:id="@+id/url_text_view"
			android:layout_marginLeft="10dip"
			android:layout_marginTop="4dip"
			android:layout_marginBottom="4dip"
			android:layout_marginRight="4dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>

		<View
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:background="#ff888888"
			android:layout_margin="4dip"/>

		<LinearLayout
			android:id="@+id/download_noti_layout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:visibility="gone"
			android:layout_margin="6dip">
			<SeekBar
				android:id="@+id/download_percent_seek_bar"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="9"
				android:clickable="false"
				android:focusableInTouchMode="false"
				android:gravity="center"/>
			<TextView
				android:id="@+id/download_percent_text_view"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:text="@string/download_percent_default"
				android:gravity="center"
				android:layout_gravity="center"/>
		</LinearLayout>

		<TextView
			android:id="@+id/error_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ffff0000"
			android:visibility="invisible"
			android:layout_margin="6dip"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:layout_margin="6dip">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/download_start_stop_button"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/start"/>
			<Button
				android:id="@+id/download_pause_resume_button"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/pause"
				/>
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>