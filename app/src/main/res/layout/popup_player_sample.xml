<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical" >
    
    <app.nunc.com.staatsoperlivestreaming.nexplayerengine.NexVideoRenderer
        android:id="@+id/videoview_p"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView 
        android:id="@+id/error_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#44888888"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center" />
    
    <Button 
        android:id="@+id/play_pause_button"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@android:drawable/ic_media_play"
        android:layout_width="60dip"
        android:layout_height="60dip" />
    
    <Button 
        android:id="@+id/popup_play_button"
        android:layout_toRightOf="@+id/play_pause_button"
        android:layout_marginLeft="50dip"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/popup_off"
        android:layout_width="60dip"
        android:layout_height="60dip" />

</RelativeLayout>
